{
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "off",

  "explorer.excludeGitIgnore": true,

  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.readonlyInclude": {
    "LICENSE": true,
    "node_modules/**": true,
    "package-lock.json": true,
  },

  "search.exclude": {
    "LICENSE": true,
    "node_modules/**": true,
    "package-lock.json": true,
  },
}
